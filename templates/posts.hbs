<div class="container">

    <div class="btn btn-primary btn-lg" {{action "sortBy" "shareVolume"}}>
        Most Active By Volume
    </div>
    <div class="btn btn-primary btn-lg" {{action "sortBy" "changeNet"}}>
        Gainers
    </div>
    <div class="btn btn-primary btn-lg" {{action "sortBy" "changeNet"}}>
        Losers
    </div>
    <!--controller vars go here -->
    {{companyChosen}}
    <div class="container">
        <table id="stocksummary" class="table table-hover table-bordered">
            <thead>
                <tr>

                    <th>
                        Company
                    </th>
                    <th>
                        Open Price
                    </th>
                    <th>
                        Current Price
                    </th>
                    <th>Change Net - % </th>
                    <th>
                        Share Volume
                    </th>
                    <th>
                        <!-- buttons go here -->
                    </th>
                </tr>
            </thead>
            <!--this is needed to make the table-hover and table-bordered shit to work probably due to ember-->
            <tr>
            </tr>


            <!-- Dynamically generate the rest-->
            {{#each item in filterPeople}}
            <tr>
                <th>
                    <a {{action 'showThisShit' item.imageName }}>{{item.name}} </a>
                </th>
                <th>
                    {{item.openPrice}}
                </th>
                <th>
                    {{item.lastSale}}
                </th>
                <th>
                    <p>
	                    {{item.changeNet}}
                        <img {{bind-attr src=item.changeNetSymbol}}>
	                    {{item.changePercent}}%
                    </p>

                </th>
                <th>
                    {{item.shareVolume}}
                </th>
                <th>
                    <!-- buy and sell buttons go here -->
                    <button class='btn-xs'>
                        {{#link-to 'placeBidOrder' item}}Buy{{/link-to}}
                    </button>
                    <button class="btn-xs">
                        {{#link-to 'placeSellOrder'item}}Sell{{/link-to}}
                    </button>
                </th>

            </tr>
            {{/each}}
        </table>

        <div class="row">
            <div class="col-lg-5">
                <h3> Market By Order</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th colspan="2">
                                Buy
                            </th>
                            <th colspan="2">
                                Sell
                            </th>
                        </tr>
                        <tr>
                            <th>Volume</th>
                            <th>Price</th>
                            <th>Volume</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                </table>
            </div>

            <div class="col-lg-5">
                <h3> Market By Price</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th colspan="2">
                                Buy
                            </th>
                            <th colspan="2">
                                Sell
                            </th>
                        </tr>
                        <tr>
                            <th>#</th>
                            <th>Volume</th>
                            <th>Price</th>
                            <th>Price</th>
                            <th>Volume</th>
                            <th>#</th>
                        </tr>
                    </thead>
                </table>
            </div>

            <div class="col-lg-2">
                <h3> Company Logo </h3> {{#if companyChosen }}
                <img {{bind-attr src=imageString}} width="150"> {{/if}}
            </div>
        </div>

    </div>




    </div>
</div>

